# /etc/systemd/system/ControlCenterUi.service

[Unit]
Description=Control Center UI Service
Requires=docker.service
After=docker.service network-online.target
Wants=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/ubuntu/iot-control-center/ControlCenterUi
ExecStart=/home/ubuntu/iot-control-center/ControlCenterUi/ShellScripts/start.sh
ExecStop=/home/ubuntu/iot-control-center/ControlCenterUi/ShellScripts/stop.sh
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target