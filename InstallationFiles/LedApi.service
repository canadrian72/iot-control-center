# /etc/systemd/system/LedApi.service

[Unit]
Description=Control Center LED API Service
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/led-control-center/LedApi
ExecStart=/home/led-control-center/LedApi/ShellScripts/start.sh
ExecStop=/home/led-control-center/LedApi/ShellScripts/stop.sh
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target